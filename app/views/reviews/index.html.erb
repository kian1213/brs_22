<div class="panel panel-success">
  <div class="panel-heading panel-colors">
    <h3><%= t ".header_title" %></h3>
  </div>
  <table class="table table-striped table-advance table-hover pretty">
    <hr>
    <thead>
      <tr>
        <th><%= t ".book" %></th>
        <th><%= t ".content" %></th>
        <th><%= t ".rate" %></th>
        <th><%= t ".actions" %></th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= link_to review.book.title,
            user_review_path(current_user, review) %></td>
          <td><%= truncate review.content, length: 50 %></td>
          <td><%= review.rate %></td>
          <td>
            <div class="admin-actions">
              <%= link_to t(".edit"), edit_user_review_path(current_user, review),
                class: "btn btn-primary" %>
              <%= link_to t(".delete"), user_review_path(current_user, review),
                method: :delete, data: {confirm: t(".confirm")},
                class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="paginate">
    <%= will_paginate @reviews %>
  </div>
</div>
