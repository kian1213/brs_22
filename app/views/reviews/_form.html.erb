<%= render "layouts/error_messages", object: f.object %>
<%= f.hidden_field :user_id, value: params[:user_id] %>
<%= f.hidden_field :book_id, value: params[:book_id] %>
<%= f.label :rate, t(".rate") %>
<br>
<% (1..5).to_a.reverse_each do |rate| %>
  <%= f.radio_button :rate, rate.to_i %>
  <%= @rate_descriptions[rate.to_i - 1] %>
<% end %>
<br><br>
<%= f.label :content, t(".user_review") %>
<br>
<%= f.text_area :content, autofocus: true, placeholder: t(".content"),
  class: "form-control", rows: 15 %>
<br>
