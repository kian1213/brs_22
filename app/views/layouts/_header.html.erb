<header class="navbar navbar-fixed-top navbar-inverse nav-color">
  <div class="container">
    <nav>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to t(".app_title"), admin_root_path, id: "logo" %>
      <% else %>
        <%= link_to t(".app_title"), root_path, id: "logo" %>
      <% end %>
      <ul class ="nav bar navbar-nav pull-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".tablink_welcome" %>
              <%= current_user.full_name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".tablink_profile"), "#" %></li>
              <li><%= link_to t(".tablink_setting"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to t(".tablink_logout"), destroy_user_session_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".tablink_login"), new_user_session_path %></li>
          <li><%= link_to t(".tablink_signup"), new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
