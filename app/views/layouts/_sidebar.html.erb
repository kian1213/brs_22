<div class="row">
  <div class="col-md-12">
    <div class="sidebar-panel">
      <nav class="nav-sidebar">
        <ul class="nav tabs">
          <li class="sidebar-panel-title">
            <h3><%= t ".side_title" %></h3>
          </li>
          <% if current_user.admin? %>
            <li>
              <%= link_to t(".users"), admin_users_path %>
            </li>
            <li>
              <%= link_to t(".categories"), admin_categories_path %>
            </li>
            <li>
              <%= link_to t(".books"), admin_books_path %>
            </li>
            <li>
              <%= link_to t(".request"), admin_requests_path %>
            </li>
          <% else %>
            <li>
              <%= link_to t(".books"), books_path %>
            </li>
            <li>
              <%= link_to t(".users"), users_path %>
            </li>
            <li>
              <%= link_to t(".my_request"),
                user_requests_path(current_user.id) %>
            </li>
            <li>
              <%= link_to t(".my_reviews"),
                user_reviews_path(current_user.id) %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>
