<% unless @activity.nil? %>
  <% activity_id ||= @activity.id %>
<% end %>
<%= form_for Like.new, url: likes_path, method: :post, remote: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :activity_id, value: activity_id %>
  <%= f.submit t(".like"), class: "btn btn-xs btn-success" %>
<% end %>
