<div class="row user-forms">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= t ".title" %></h2>
    <%= form_for(resource, as: resource_name,
      url: session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true,
        placeholder: t(".email"), class: "form-control" %>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off",
        placeholder: t(".password"), class: "form-control" %>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= f.button :submit, class: "btn btn-success btn-block" do %>
        <i class="fa fa-lock">
          <%= t ".login" %>
        </i>
      <% end %>
      <hr>
    <% end %>
    <%= t ".new_user" %>
    <br>
    <%= link_to t(".signup"), new_registration_path(resource_name) %>
  </div>
</div>
