<div class="panel panel-success">
  <div class="panel-heading panel-colors">
    <h3><%= t ".header_title" %></h3>
  </div>
  <div class="search-form">
    <%= form_tag user_requests_path(current_user.id), method: "get",
      id: "form_search" do %>
      <p>
        <%= text_field_tag :search,
          params[:search], placeholder: t(".search_placeholder") %>
        <%= submit_tag t(".search_button"), class: "btn btn-warning btn-sm" %>
      </p>
    <% end %>
  </div>
  <div id="index-list">
    <%= render "requests" %>
  </div>
</div>
