<table class="table table-striped table-advance table-hover pretty">
  <hr>
  <%= link_to new_user_request_path, class: "btn btn-success
    pull-right index-new-button" do %>
    <i class="fa fa-plus-circle">
      <%= t ".add" %>
    </i>
  <% end %>
  <thead>
    <tr>
      <th><%= sortable "book_title", t(".title") %></th>
      <th><%= sortable "book_author", t(".author") %></th>
      <th><%= t ".url" %></th>
      <th><%= t ".status" %></th>
      <th><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.book_title %></td>
        <td><%= request.book_author %></td>
        <td><%= link_to request.url, request.url %></td>
        <td><%= request.status %></td>
        <td>
          <div class="admin-actions">
            <%= link_to t(".edit"), edit_user_request_path(current_user, request),
              class: "btn btn-primary" %>
            <%= link_to t(".delete"), user_request_path(current_user, request),
              method: :delete, data: {confirm: t(".confirm")},
              class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate">
  <%= will_paginate @requests %>
</div>
