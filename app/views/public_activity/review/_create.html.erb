<% @review = Review.find(activity.trackable_id) %>
<%= t ".create_review" %>
<% if activity.trackable %>
  <%= link_to @review.book.title, book_path(@review.book) %>
  <i class="time-ago">
    <%= time_ago_in_words activity.created_at %>
    <%= t ".ago" %>
  </i>
<% else %>
  <%= t ".removed" %>
<% end %>
