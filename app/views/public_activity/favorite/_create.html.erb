<% @favorite = Favorite.find(activity.trackable_id) %>
<%= t ".marks" %>
<% if activity.trackable %>
  <%= link_to @favorite.book.title, book_path(@favorite.book) %>
  <%= t ".as_favorite" %>
  <i class="time-ago">
    <%= time_ago_in_words activity.created_at %>
    <%= t ".ago" %>
  </i>
<% else %>
  <%= t ".removed" %>
<% end %>
