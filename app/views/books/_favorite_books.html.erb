<table class="table table-striped table-advance table-hover pretty">
  <hr>
  <thead>
    <tr>
      <th><%= sortable "title", t(".title") %></th>
      <th><%= sortable "author", t(".author") %></th>
      <th><%= sortable "published_date", t(".date") %></th>
      <th><%= sortable "total_page", t(".page") %></th>
      <th><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= link_to favorite.book.title, book_path(favorite.book_id) %></td>
        <td><%= favorite.book.author %></td>
        <td><%= datetime favorite.book.published_date %></td>
        <td><%= favorite.book.total_page %></td>
        <td>
          <div class="admin-actions">
            <%= link_to t(".remove"), favorite_path(favorite),
              method: :delete, data: {confirm: t(".confirm")},
              class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate">
  <%= will_paginate @favorites %>
</div>

