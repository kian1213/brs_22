<div class="panel panel-success">
  <div class="panel-heading panel-colors">
    <h3><%= t ".header_title" %></h3>
  </div>
  <ul class="nav nav-tabs">
    <li class="active">
      <a data-toggle="tab" href="#books_index"><%= t ".books_list" %></a>
    </li>
    <li>
      <a data-toggle="tab" href="#list_index"><%= t ".my_books" %></a>
    </li>
    <li>
      <a data-toggle="tab" href="#favorites_index"><%= t ".favorites" %></a>
    </li>
  </ul>
  <div class="tab-content">
    <div id="books_index" class="tab-pane fade in active">
      <div class="search-form">
        <%= form_tag books_path, method: "get",
          id: "form_search" do %>
          <p>
            <%= text_field_tag :search,
              params[:search], placeholder: t(".search_placeholder") %>
            <%= submit_tag t(".search_button"), class: "btn btn-warning btn-sm" %>
          </p>
        <% end %>
      </div>
      <div id="index-list">
        <%= render "books" %>
      </div>
    </div>
    <div id="list_index" class="tab-pane fade">
      <div class="search-form">
        <%= form_tag books_path, method: "get",
          id: "form_search" do %>
          <p>
            <%= text_field_tag :search,
              params[:search], placeholder: t(".search_placeholder") %>
            <%= submit_tag t(".search_button"), class: "btn btn-warning btn-sm" %>
          </p>
        <% end %>
      </div>
      <div id="index-list">
        <%= render "my_books" %>
      </div>
    </div>
    <div id="favorites_index" class="tab-pane fade">
      <div class="search-form">
        <%= form_tag books_path, method: "get",
          id: "form_search" do %>
          <p>
            <%= text_field_tag :search,
              params[:search], placeholder: t(".search_placeholder") %>
            <%= submit_tag t(".search_button"), class: "btn btn-warning btn-sm" %>
          </p>
        <% end %>
      </div>
      <div id="index-list">
        <%= render "favorite_books" %>
      </div>
    </div>
  </div>
</div>
