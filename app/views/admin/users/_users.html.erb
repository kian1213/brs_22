<table class="table table-striped table-advance table-hover pretty">
  <hr>
  <%= link_to new_admin_user_path, class: "btn btn-success
    pull-right index-new-button" do %>
    <i class="fa fa-plus-circle">
      <%= t ".add" %>
    </i>
  <% end %>
  <thead>
    <tr>
      <th><%= t ".avatar" %></th>
      <th><%= sortable "first_name", t(".name") %></th>
      <th><%= sortable "email", t(".email") %></th>
      <th><%= sortable "admin", t(".admin") %></th>
      <th><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar, size: "50x50" %></td>
        <td><%= link_to user.full_name, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td>
          <div class="admin-actions">
            <%= link_to t(".edit"), edit_admin_user_path(user),
              class: "btn btn-primary" %>
            <%= link_to t(".delete"), admin_user_path(user), method: :delete,
              data: {confirm: t(".confirm")}, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate">
  <%= will_paginate @users %>
</div>

