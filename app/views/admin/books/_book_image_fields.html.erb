<div class="form-group fields">
  <%= f.hidden_field :id %>
  <%= f.label :image, class: "col-sm-4 control-label" %>
  <div class="col-sm-4">
    <%= f.file_field :image %>
  </div>
  <div class="col-sm-4">
    <%= f.hidden_field :_destroy, class: "removable" %>
    <%= link_to_remove_fields t(".remove"), f, "btn btn-danger" %>
  </div>
</div>
