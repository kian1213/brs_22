<table class="table table-striped table-advance table-hover pretty">
  <hr>
  <%= link_to new_admin_book_path, class: "btn btn-success
    pull-right index-new-button" do %>
    <i class="fa fa-plus-circle">
      <%= t ".add" %>
    </i>
  <% end %>
  <thead>
    <tr>
      <th><%= sortable "title", t(".title") %></th>
      <th><%= sortable "author", t(".author") %></th>
      <th><%= sortable "published_date", t(".date") %></th>
      <th><%= sortable "total_page", t(".page") %></th>
      <th><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, admin_book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= datetime book.published_date %></td>
        <td><%= book.total_page %></td>
        <td>
          <div class="admin-actions">
            <%= link_to t(".edit"), edit_admin_book_path(book),
              class: "btn btn-primary" %>
            <%= link_to t(".delete"), admin_book_path(book),
              method: :delete, data: {confirm: t(".confirm")},
              class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate">
  <%= will_paginate @books %>
</div>

