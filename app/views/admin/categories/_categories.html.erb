<table class="table table-striped table-advance table-hover pretty">
  <hr>
  <%= link_to new_admin_category_path, class: "btn btn-success
    pull-right index-new-button" do %>
    <i class="fa fa-plus-circle">
      <%= t ".add" %>
    </i>
  <% end %>
  <thead>
    <tr>
      <th><%= sortable "name", t(".name") %></th>
      <th><%= t ".description" %></th>
      <th><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, admin_category_path(category) %></td>
        <td><%= truncate category.description, length: 50 %></td>
        <td>
          <div class="admin-actions">
            <%= link_to t(".edit"), edit_admin_category_path(category),
              class: "btn btn-primary" %>
            <%= link_to t(".delete"), admin_category_path(category),
              method: :delete, data: {confirm: t(".confirm")},
              class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate">
  <%= will_paginate @categories %>
</div>

